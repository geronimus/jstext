{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "eqeqeq": [ "error", "always" ],
    "indent": [ "error", 2 ],
    "new-cap": "error",
    "no-control-regex": "off",
    "quotes": [ "error", "double" ],
    "semi": [ "error", "always" ]
  },
  "overrides": [
    {
      "files": [ "test/**/*.js" ],
      "rules": {
        "no-undef": "off"
      }
    }
  ]
}
